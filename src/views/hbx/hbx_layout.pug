  body
    .hbx_modal_overlay
    .hbx_ordered_item_modal
      .close_modal(onclick="closeOrderedItemModal(this)") X
      h2 PURCHASED ITEMS
      .modal_contents_container
        table.modal_contents(style='width:100%')
          tr
            th ITEM
            th BRAND
            th NAME
            th COUNT
            th PRICE
            th TOT.
    .hbx_nav
      img.hamburger_mobile(src="/images/hbx_images/general/hamburger.png")
      .left_nav_items
        a(href="/store")
          img.hbx_title(src="/images/hbx_images/general/hbx_logo.png")
        ul.hbx_links_container.nav_elements
          a(href="/store").nav_menswear.hbx_nav_link.nav_elements MEN
          li.nav_womenswear.hbx_nav_link.nav_elements.empty_link WOMEN 
          li.nav_archives.hbx_nav_link.nav_elements.empty_link ARCHIVES
          li.nav_sale.hbx_nav_link.nav_elements.empty_link SALE 
          li.nav_journal.hbx_nav_link.nav_elements.empty_link JOURNAL
          - if(user){
              li.nav_journal.hbx_nav_link.nav_elements.hidden_user TESTING, USER.ID:
              span.users_persistent_id.hidden_user !{JSON.stringify(user.id)}
              span.users_persistent_id.hidden_user !{ Boolean(user.password) }
          - }
      .right_nav_items
        img.hbx_search(src="/images/hbx_images/general/search.png")
        ul.register.nav_elements
          - if(user){
              .hidden_user !{JSON.stringify(user)}
              .nav_login.nav_elements
                button.hbx_nav_link.hbx_account_button ACCOUNT
                  .hbxAccountMenu
                    .hbx_topmost_line
                    a(href="/hbx_account") YOUR SETTINGS
                    a(href="/hbx_logout") LOGOUT
          - } else {
              a(href="/hbx_login").nav_login.hbx_nav_link.nav_elements LOG IN
          - }
          li.nav_help.hbx_nav_link.nav_elements.empty_link HELP
        .cart.nav_elements#bag_button
          .shopping_bag_container
            .shopping_bag_handle 
            a.shopping_bag(href="/hbx_shopping_bag") 
          span.hbx_nav_link YOUR BAG
          img.arrow_down(src="/images/hbx_images/general/arrow_down.png")
          .cart_dropdown
            .nav_button_cover
              .shopping_bag_container.shopping_bag_container_hover
                .shopping_bag_handle.hover_handle
                .shopping_bag.shopping_bag_deux 
              span.hbx_nav_link.hbx_nav_link_hover YOUR BAG
              img.arrow_down.arrow_down_hover(
                src="/images/hbx_images/general/arrow_down.png"
              )
            - if(!cart || !cart.length){
                  .localStorageContent
                  p.no_items_in_bag You have no items inside your shopping bag
                  a.new_arrivals_btn(href="/store") SHOP NEW ARRIVALS
            - } else {
                .items_in_bag
                  span.dropdown_item_count 0 Items
                  span in Bag
                .dropdown_notice_top Please note: Item(s) is not reserved until checkout is completed.
                .cart_dropdown_product_container
                
                  - for(let i = 0; i < cart.length; i++){
                    .cart_product
                      .dropdown_img
                        img(src=cart[i].item_image) 
                        
                      .cart_product_container
                        .cart_product_brand !{cart[i].item_brand}
                        .cart_product_name !{cart[i].item_name}
                        .cart_cost_per_product.hidden_user !{cart[i].item_individual_price}
                        .cart_size Size: !{cart[i].item_size}
                        .cart_notice This item is excluded from promotions.
                        .quantity_and_price_container
                          .quantity_and_price
                            .quantity
                              span.qty Qty:
                              span
                                span.minus_item(onclick="decrementCountInDropdown(this,1)") -
                                span.item_count !{cart[i].item_quantity}
                                span.add_item(onclick="incrementCountInDropdown(this,5)") +
                            .dropdown_price 
                              span USD
                              span.product_price !{cart[i].item_cost}
                              span.price_decimal .00
                    - }
                .dropdown_order_total_container
                  .dropdown_order_total
                    span.order_tot ORDER TOTAL
                    span USD 
                    span.cart_price 0
                .dropdown_notice
                  span You will be charged in 
                  span.usd USD 
                  span.usd_cart_price 0
                  span .00
                .dropdown_button_container
                  a.view_bag(href="/hbx_shopping_bag") VIEW BAG
                  a.checkout_now(href="/checkout/addressing") CHECKOUT NOW
                .dropdown_notice.dropdown_last_notice 'Have a Promotional Code or Gift Card? Add it in the Bag.'
                              
            - }

        ul.language.nav_elements
          img.hbx_flag.empty_link(src="/images/hbx_images/general/usa_flag.png")
          span.hbx_nav_link.empty_link USD
    - if(successful_login){
      .hbx_successful_login_message 
        span Successfully Logged In!
    -}

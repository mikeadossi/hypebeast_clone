  body
    .hbx_modal_overlay
    .hbx_ordered_item_modal
      .fa.fa-times.close_modal(onclick="closeOrderedItemModal(this)")
      h2 PURCHASED ITEMS
      .modal_contents_container
        table.modal_contents(style='width:100%')
          tr
            th ITEM
            th BRAND
            th NAME
            th COUNT
            th PRICE
            th TOT.
    .hbx_nav
      img.hamburger_mobile(src="/images/hbx_images/general/hamburger.png")
      .left_nav_items
        a(href="/store")
          img.hbx_title(src="/images/hbx_images/general/hbx_logo.png")
        ul.hbx_links_container.nav_elements
          a(href="/store").nav_menswear.hbx_nav_link.nav_elements MEN
          li.nav_womenswear.hbx_nav_link.nav_elements.empty_link WOMEN 
          li.nav_archives.hbx_nav_link.nav_elements.empty_link ARCHIVES
          li.nav_sale.hbx_nav_link.nav_elements.empty_link SALE 
          li.nav_journal.hbx_nav_link.nav_elements.empty_link JOURNAL
          - if(user){
              li.nav_journal.hbx_nav_link.nav_elements.hidden_user TESTING, USER.ID:
              span.users_persistent_id.hidden_user !{JSON.stringify(user.id)}
              span.users_persistent_id.hidden_user !{ Boolean(user.password) }
          - }
      .right_nav_items
        img.hbx_search(src="/images/hbx_images/general/search.png")
        ul.register.nav_elements
          - if(user){
              .hidden_user !{JSON.stringify(user)}
              .nav_login.nav_elements
                button.hbx_nav_link.hbx_account_button ACCOUNT
                  .hbxAccountMenu
                    .hbx_topmost_line
                    a(href="/hbx_account") YOUR SETTINGS
                    a(href="/hbx_logout") LOGOUT
          - } else {
              a(href="/hbx_login").nav_login.hbx_nav_link.nav_elements LOG IN
          - }
          li.nav_help.hbx_nav_link.nav_elements.empty_link HELP
        .cart.nav_elements#bag_button
          .shopping_bag_container
            .shopping_bag_handle 
            a.shopping_bag(href="/hbx_shopping_bag") 0
          span.hbx_nav_link YOUR BAG
          img.arrow_down(src="/images/hbx_images/general/arrow_down.png")
          .cart_dropdown
            .nav_button_cover
              .shopping_bag_container.shopping_bag_container_hover
                .shopping_bag_handle.hover_handle
                .shopping_bag.shopping_bag_deux 0
              span.hbx_nav_link.hbx_nav_link_hover YOUR BAG
              img.arrow_down.arrow_down_hover(
                src="/images/hbx_images/general/arrow_down.png"
              )

            .localStorageContent
            .no_items_in_bag_container
              p.no_items_in_bag You have no items inside your shopping bag!
              a.new_arrivals_btn(href="/store") SHOP NEW ARRIVALS

        ul.language.nav_elements
          img.hbx_flag.empty_link(src="/images/hbx_images/general/usa_flag.png")
          span.hbx_nav_link.empty_link USD
    - if(successful_login){
      .hbx_successful_login_message 
        span Successfully Logged In!
    -}
    .hbx_search_mobile 
      input.hbx_search_input_mobile(placeholder="Search")
      button.hbx_search_button_mobile.empty_link Search
    .hbx_mobile_menu_background
      .hbx_scrollable_container
        .hbx_mobile_menu_options
          .mobile_links_container
            .mens_mobile_link MENS 
            .womens_mobile_link WOMENS
          ul.hbx_mobile_menu_content.hbx_primary_mobile_links
            li New Arrivals 
              img.hbx_drop_icon(src="/images/hbx_images/general/dropIcon.png")
            hr
            li.mobile_option_brands Brands
              img.hbx_drop_icon(src="/images/hbx_images/general/dropIcon.png")
              ul.brands_dropdown
                li 
                  a(href="/brands/11-by-boris-bidjan-saberi") 11 By Boris Bidjan Saberi
                li 
                  a(href="/brands/adidas-originals") Adidas Originals
                li 
                  a(href="/brands/denim-by-vanquish-fragment") Denim By Vanquish & Fragment
                li 
                  a(href="/brands/mastermind-world") Mastermind World
                li 
                  a(href="/brands/tres-bien") Très Bien
                li 
                  a(href="/brands/undercover") Undercover
            hr
            li Clothing
              img.hbx_drop_icon(src="/images/hbx_images/general/dropIcon.png")
            hr
            li Accessories
              img.hbx_drop_icon(src="/images/hbx_images/general/dropIcon.png")
            hr
            li Shoes
              img.hbx_drop_icon(src="/images/hbx_images/general/dropIcon.png")
            hr
            li Sales
              img.hbx_drop_icon(src="/images/hbx_images/general/dropIcon.png")
          ul.hbx_mobile_menu_content.hbx_sub_mobile_links
            li Archives
            hr
            li Journal
            hr
            -if(user){
              li.mobile_options
                a(href="/hbx_account") Account
              li.mobile_options
                a(href="/hbx_logout") Logout
            -} else {
              li.mobile_options
                a(href="/hbx_login") Log In
            -}
            hr
            li Help
              img.hbx_grey_drop_icon(
                src="/images/hbx_images/general/dropIcon_grey.png"
              )
            hr
            li About HBX
              img.hbx_grey_drop_icon(
                src="/images/hbx_images/general/dropIcon_grey.png"
              )
            hr
          .country_and_usd
            .country
              img(src="/images/hbx_images/general/usa_flag_grey.png")
              p UNITED STATES
              img.arrow_down_mobile(
                src="/images/hbx_images/general/arrow_down.png"
              )
            .usd_container 
              p USD
              img.arrow_down_mobile(
                src="/images/hbx_images/general/arrow_down.png"
              )
          ul.hbx_language
            li English
            li 简体中文
            li 繁體中文
          .hbx_mobile_menu_social_media
            i.fa.fa-lg.fa-facebook
            i.fa.fa-lg.fa-instagram
            i.fa.fa-lg.fa-twitter
        .hbx_outer_mobile_menu

      
    
    

doctype html
html
  head
    title= 'Hypebeast Clone'
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css", integrity="sha256-HxaKz5E/eBbvhGMNwhWRPrAR9i/lG1JeT4mD6hCQ7s4=", crossorigin="anonymous")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/hbx/hbx_layout.css')
    link(rel='stylesheet', href='/stylesheets/hbx/hbx_index.css')
    link(rel='stylesheet', href='/stylesheets/hbx/hbx_footer.css')
    link(rel='icon', href='/images/hypebeast_images/general/favicon.png')
  body
    
    .hbx_nav
      img.hamburger_mobile(src="/images/hbx_images/general/hamburger.png")
      .left_nav_items
        img.hbx_title(src="images/hbx_images/general/hbx_logo.png")
        ul.hbx_links_container.nav_elements
          li.nav_menswear.hbx_nav_link.nav_elements MEN
          li.nav_womenswear.hbx_nav_link.nav_elements WOMEN 
          li.nav_archives.hbx_nav_link.nav_elements ARCHIVES
          li.nav_sale.hbx_nav_link.nav_elements SALE 
          li.nav_journal.hbx_nav_link.nav_elements JOURNAL
      .right_nav_items
        img.hbx_search(src="images/hbx_images/general/search.png")
        ul.register.nav_elements
          li.nav_login.hbx_nav_link.nav_elements LOG IN
          li.nav_help.hbx_nav_link.nav_elements HELP
        ul.cart.nav_elements
          li.shopping_bag_container
            .shopping_bag_handle
            .shopping_bag 10
          span.hbx_nav_link YOUR BAG
          img.arrow_down(src="images/hbx_images/general/arrow_down.png")
        ul.language.nav_elements
          img.hbx_flag(src="images/hbx_images/general/usa_flag.png")
          span.hbx_nav_link USD
    
    block content
    
    include hbx_footer
    script(src='https://code.jquery.com/jquery-2.2.1.js')
    script(src='/main.js')

extends layout

block content
  .banner_container
    img(src="images/blogImages/banner_12_product.png").index_banner_image
    
  .content
    .top_stories
      
      .top_ten_container
        .top_ten_header
          h2 Top 10 Stories
            span Continuously updated
        - for(let y = 0; y < topTen.length; y++){
          .top_ten_story
            .top_ten_number 
              div= y+1
            .top_ten_image !{ topTen[y].post_image } 
            .top_ten_title
              .top_ten_description !{ topTen[y].post_title } 
              img(src="images/hype_flame.png")
              span.top_ten_hype !{ topTen[y].post_hype_count } Hypes
        - }
        
      .top_ten_mobile_container
        .top_ten_header
          h2 Top 10 Stories
            span Continuously updated
        - for(let y = 0; y < topTen.length; y++){
          .top_ten_story
            .top_ten_number 
              div= y+1
            .top_ten_image !{ topTen[y].post_image } 
            .top_ten_title
              .top_ten_description !{ topTen[y].post_title } 
              img(src="images/hype_flame.png")
              span.top_ten_hype !{ topTen[y].post_hype_count } Hypes
        - }
        
  .feed_header_mobile
    .feed_latest.feed_button Latest
    .feed_rising.feed_button Rising
    .feed_popular.feed_button Popular
    
  .content 
    .article_container
      .feed_header
        .feed_latest.feed_button Latest
        .feed_rising.feed_button Rising
        .feed_popular.feed_button Popular
    - for(let i = 0; i < posts.length; i++){
      .article_container
        span !{ posts[i].post_image }
        .article_info
          .category !{ posts[i].category } 
          a.title(href="/post/"+posts[i].id) !{ posts[i].post_title } 
          .author By !{ posts[i].post_author } / !{ posts[i].post_time_of }
          .subtitle !{ posts[i].post_subtitle } 
          .hypeRating 
            img(src="images/hype_flame.png") 
            span !{ posts[i].post_hype_count } Hypes
            img(src="images/comment_balloon.png") 
            span !{ posts[i].post_comment_count }
        .article_border
    -  }
    .article_container
      div.more_button_mobile More
        span
          i.fa.fa-chevron-down
  
  div.more_button More
    span
      i.fa.fa-chevron-down

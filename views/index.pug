extends layout

block content
  .banner_container
    img(src="images/blogImages/banner_12_product.png").index_banner_image
    
  .content
    .top_stories
      
      .top_ten_container
        .top_ten_header
          h2 Top 10 Stories
            span Continuously updated 
        .top_ten_left
          - for(let y = 0; y < 5; y++){
            div(class="here"+y) :)
            .top_ten_story
              .top_ten_number 
                div= y+1
              .top_ten_image !{ topTen[y].post_image } 
              .top_ten_title
                .top_ten_description !{ postTitles[y] }
              .top_ten_details
                img(src="images/hype_flame.png")
                span.top_ten_hype !{ topTen[y].post_hype_count } Hypes
          - }
        .top_ten_right
          - for(let y = 5; y < topTen.length; y++){
            .top_ten_story
              .top_ten_number 
                div= y+1
              .top_ten_image !{ topTen[y].post_image } 
              .top_ten_title
                .top_ten_description !{ postTitles[y] } 
              .top_ten_details
                img.right_images(src="images/hype_flame.png")
                span.top_ten_hype !{ topTen[y].post_hype_count } Hypes
          - }
        
      .top_ten_mobile_container
        .top_ten_header
          h2 Top 10 Stories
            span Continuously updated
        - for(let y = 0; y < topTen.length; y++){
          .top_ten_story
            .top_ten_number 
              div= y+1
            .top_ten_image !{ topTen[y].post_image } 
            .top_ten_title
              .top_ten_description !{ topTen[y].post_title } 
              img(src="images/hype_flame.png")
              span.top_ten_hype !{ topTen[y].post_hype_count } Hypes
        - }
        
  .feed_header_mobile
    .feed_latest.feed_button Latest
    .feed_rising.feed_button Rising
    .feed_popular.feed_button Popular
    
  .content 
    .sticky_container
      img.sticky_ad_one(src="/images/ad_headphones_black.png")
      .hypebeast_jobs
        .jobs_top_container
          .jobs_header HYPEBEAST JOBS
          .jobs_link See more âž”
        .jobs_container
          .jobs_title Buyer (Womenswear)
          .jobs_location Hong Kong Full-time
        .jobs_container
          .jobs_title Editor (Womenswear)
          .jobs_location Korea Full-time (Freelance)
        .jobs_container
          .jobs_title Editor
          .jobs_location Hong Kong Full-time
        .jobs_container
          .jobs_title Editor
          .jobs_location New York Full-time
        .jobs_container
          .jobs_title Video Editor / Videographer
          .jobs_location New York Full-time
        .jobs_button See More Job Openings
      .newsletter_widget
        p.newsletter_heading HYPEBEAST
        p.newsletter_subtitle SIGN UP FOR OUR NEWSLETTERS
        p.newsletter_text Receive the latest in Footwear, Fashion, Music and Creativity in our Newsletters.
        input.newsletter_input(placeholder="Enter your email address")
        button.newsletter_button Sign Up
      //- img.sticky_ad_two(src="/images/ad_tall_headphones.png")
        
    .article_container
      .feed_header
        .feed_latest.feed_button Latest
        .feed_rising.feed_button Rising
        .feed_popular.feed_button Popular
    - for(let i = 0; i < 6; i++){
      .article_container
        span !{ posts[i].post_image }
        .article_info
          .category !{ posts[i].category } 
          a.title(href="/post/"+posts[i].id) !{ posts[i].post_title } 
          .author By !{ posts[i].post_author } / !{ posts[i].post_time_of }
          .subtitle !{ posts[i].post_subtitle } 
          .hypeRating 
            img(src="images/hype_flame.png") 
            span !{ posts[i].post_hype_count } Hypes
            img(src="images/comment_balloon.png") 
            span !{ posts[i].post_comment_count }
        .article_border
    -  }
    
    .wide_ad_container
      img.wide_ad(src="images/ad_wide_hypebae.png")
      .sticky_container
        img.sticky_ad_two(src="/images/ad_tall_headphones.png")
      
